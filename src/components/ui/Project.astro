---
const { project } = Astro.props;
const { desc } = Astro.props;
const { link } = Astro.props;
const { text } = Astro.props;
---
<div>
    <h5 class="font-big bold timeline">{project}</h5>
    <p class="font-regular dim">{desc}</p>
    <slot />
    <a href={link} target="_blank" class="link-block">
        <p class="font-regular dim link">{text}</p><span class="icon"><svg xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 64 64" width="20px" height="20px"><path fill="currentColor" d="M 40 10 C 38.896 10 38 10.896 38 12 C 38 13.104 38.896 14 40 14 L 47.171875 14 L 30.585938 30.585938 C 29.804938 31.366938 29.804938 32.633063 30.585938 33.414062 C 30.976938 33.805063 31.488 34 32 34 C 32.512 34 33.023063 33.805062 33.414062 33.414062 L 50 16.828125 L 50 24 C 50 25.104 50.896 26 52 26 C 53.104 26 54 25.104 54 24 L 54 12 C 54 10.896 53.104 10 52 10 L 40 10 z M 18 12 C 14.691 12 12 14.691 12 18 L 12 46 C 12 49.309 14.691 52 18 52 L 46 52 C 49.309 52 52 49.309 52 46 L 52 34 C 52 32.896 51.104 32 50 32 C 48.896 32 48 32.896 48 34 L 48 46 C 48 47.103 47.103 48 46 48 L 18 48 C 16.897 48 16 47.103 16 46 L 16 18 C 16 16.897 16.897 16 18 16 L 30 16 C 31.104 16 32 15.104 32 14 C 32 12.896 31.104 12 30 12 L 18 12 z"/></svg></span>
    </a>
</div>
<style>
    div {
        padding-left: var(--margin-l);
    }
    .timeline {
        position: relative;
    }
    .timeline:before {
        position: absolute;
        content: '';
        width: 16px;
        height: 16px;
        background-color: var(--accent-color);
        border-radius: 50%;
        z-index: 100;
        left: calc((var(--margin-l) * -1) - 8px - 2.5px); /* (margin) - (half of the circle width) - (half of line width) */
        top: 8px;
    }
    .link {
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .link-block {
        display: flex;
        flex-direction: row;
        gap: 8px;
        margin-top: var(--margin-s);
        text-decoration: none;
    }
    .icon {
        display: flex;
        justify-content: center;
        align-items: center;
        color: var(--accent-color);
    }
</style>